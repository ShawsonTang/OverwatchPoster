<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
		<!--The form will submit a "POST" request to "/campgrounds"  -->
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments", method="POST">
				<div class="form-group">
					<!-- Notice here we use comment[text] instead of text as the value of 
					name property. This is because in this way, we store the value we need 
					in our comment object and dont need to get the value in our post request.-->
					<input class="form-control" type="text" placeholder="text" name="comment[text]">
				</div>			
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>		
</div>

<%- include("../partials/footer") %>