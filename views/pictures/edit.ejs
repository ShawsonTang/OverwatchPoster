<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit <%= picture.name %></h1>
		<!--The form will submit a "POST" request to "/pictures"  -->
		<div style="width: 30%; margin: 25px auto;">
			<form action="/pictures/<%= picture._id%>/?_method=PUT", method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= picture.name %>" name="picture[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= picture.price %>" name="picture[price]" min="0.01" step="0.01">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= picture.image %>" name="picture[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= picture.description %>" name="picture[description]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Submit</button>
				</div>
			</form>
			<a href="/pictures">Go Back</a>
		</div>
		
	</div>		
</div>

<%- include("../partials/footer") %>

