<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to OW Poster!</h1>
			<p>View The Greatest Overwatch Posters From All Over The World!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/pictures/new">Add a New Poster</a>
			</p>
		</div>
	</header>
	<div class="row text-center">
		<% pictures.forEach((picture) => { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= picture.image %>">
				<div class="caption">
					<h4><%= picture.name %></h4>
				</div>
				<p>
					<!-- _id is automatically generated by mongodb -->
					<a href="/pictures/<%= picture._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>									
		</div>
		<% }); %>
	</div>

	
	
</div>

<%- include("../partials/footer") %>